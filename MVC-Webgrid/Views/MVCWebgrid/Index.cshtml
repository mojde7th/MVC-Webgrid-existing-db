@model IEnumerable<MVC_Webgrid.user>

@{
    ViewBag.Title = "Index";
}

<h2>نمایش رکوردها</h2>
<hr />
@{ 
    WebGrid wbgrid = new WebGrid(source:Model,rowsPerPage:5);

}

@wbgrid.GetHtml(
    tableStyle:"table",
    htmlAttributes:new {@id="wbgrid"},
    columns:wbgrid.Columns(wbgrid.Column("id","id"),
    wbgrid.Column("username", "username"),
    wbgrid.Column("password", "password")))